@{
    Layout = "_Layout";
    ViewData["Title"] = "Student - Home";
}

<div class="container-fluid p-2 justify-content-center">

<div class="p-1"></div>

    <div class="text-uppercase border-bottom p-1 fs-5"><strong>Student</strong></div>

    <div class="p-1"></div>

    <div class="d-flex p-0 flex-wrap justify-content-center bg-white shadow-sm">

        <div class="p-0 flex-grow-1">

            <div class="h-100 p-0">

                <div class="border-bottom p-2 fw-bold m-0 align-items-center">
                    <div class="d-flex align-items-center p-0 m-0">
                        <div class="p-1"></div>
                        <span class="text-uppercase lh-lg">Profile Details</span>
                    </div>
                </div>

                <div class="d-flex p-2 justify-content-start">
                    <div class="d-block">
                        <div><strong>Name : </strong><span id="name" class="text-capitalize"></span></div>
                        <div><strong>Gender : </strong><span id="gender" class="text-capitalize"></span></div>
                        <div><strong>Birth Date : </strong><span id="birthDate" class="text-capitalize"></span></div>
                    </div>
                </div>

            </div>
        </div>

    </div>

<div class="p-2"></div>

<div class="d-flex p-1 flex-wrap justify-content-center">
    
    <div class="flex-grow-1">

        <div class="d-flex flex-wrap">
            <div class="d-flex flex-grow-1 align-items-center p-1">

                    <label for="PageSize">Page Size</label>

                    <div class="p-1"></div>

                    <select name="PageSize" id="PageSize" value="5" class="p-1 m-0 border-1">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="25">25</option>
                        <option value="30">30</option>
                    </select>
                </div>
                <div class="d-block">
                <div class="card shadow-sm">
                <div class="d-flex justify-content-center align-items-center bg-white p-1">
                    <input type="hidden" id="Query"/>
                    <input type="text" id="q" class="h-100 border-1 width-15r border-gray p-1" />

                    <a id="search" class="text-black p-2 hover-round-bg-gray">
                                    <i class="icon-1r">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                        </i>
                    </a>

                </div>
                </div>

                <div class="p-1"></div>
                </div>
        </div>

            <div class="card p-0 shadow-sm bg-color-secondary">
                <div class="card-header text-uppercase fw-bold bg-gray p-1 m-0">
                    <div class="d-flex align-items-center">
                    <div class="p-2"></div>
                    <span class="flex-grow-1">Your Record</span>

                        <a id="Refresh" class="hover-round-bg-gray-light text-black">
                            <i class="icon-1r5 m-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z" />
                                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466" />
                                </svg>
                            </i>
                    </a>
                    </div>
                </div>
            <div class="card-body p-1">
                <table>

                        <thead class="border-bottom">
                            <tr>
                                <th>Course</th>
                                <th>Description</th>
                                <th>Grade</th>
                                <th>Semester</th>
                                <th>Unit</th>
                                <th>Remark</th>
                                </tr>
                    </thead>

                    <tbody id="TableBody">
              
                    </tbody>
                </table>
                    

                </div>
                <div class="card-footer p-0 m-0">
                    <div class="d-flex align-items-center m-0 p-0">

                    <div class="p-2"></div>

                    <input type="hidden" id="PageIndex" />
                    <span id="page"></span>

                    <div class="d-flex m-2">
                    <a id="prev" class="hover-round-bg-gray p-2">
                        <i class="icon-1r text-black">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                        </svg>
                        </i>
                    </a>
                    <a id="next" class="hover-round-bg-gray p-2">
                        <i class="icon-1r text-black">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708" />
                        </svg>
                        </i>
                    </a>
                    </div>
                </div>
                </div>
            </div>
            

    </div>

</div>
</div>

@section Scripts{
    <script src="@Url.Content("/js/StudentScript.js")"></script>
}